    "openai": {
      "name": "OpenAI",
      "api": "codex",
      "models": {
        "gpt-5.2": { "name": "GPT-5.2" },
        "o3": { "name": "o3", "thinking": true },
        "o4-mini": { "name": "o4-mini", "thinking": true }
      }
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "gitea": {
      "type": "local",
      "command": [
        "docker", "run", "-i", "--rm",
        "-e", "GITEA_ACCESS_TOKEN",
        "-e", "GITEA_HOST",
        "docker.gitea.com/gitea-mcp-server"
      ],
      "environment": {
        "GITEA_HOST": "{{ (datasource "secrets").GITEA_HOST }}",
        "GITEA_ACCESS_TOKEN": "{{ (datasource "secrets").GITEA_ACCESS_TOKEN }}"
      }
    },
    "websearch_exa": {
      "type": "local",
      "command": ["npx", "-y", "exa-mcp-server"],
      "timeout": 60000,
      "environment": {
        "EXA_API_KEY": "{{ (datasource "secrets").EXA_API_KEY }}"
      }
    }
  }
}
